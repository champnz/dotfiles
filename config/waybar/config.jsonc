{
  "layer": "top",
  "position": "top",
  "spacing": 2,

  "margin-left": 0,
  "margin-right": 0,
  "margin-top": 0,
  "margin-bottom": 0,

  "modules-left": [
    "clock",
    "sway/language",
    "temperature",
    "memory",
    "tray"
  ],
  "modules-center": ["sway/workspaces"],
  "modules-right": [
    "backlight",
    "pulseaudio",
    "network",
    "battery"
  ],

  "sway/workspaces": {
    "format": "{name}",
    "disable-scroll": true
  },

  "clock": {
    "format": "<span font='14'>󰥔</span> {:%H:%M}",
    "tooltip-format": "{:%A, %d %B %Y | %H:%M:%S}"
  },

  "memory": {
    "format": " {}%",
    "tooltip": false
  },

  "temperature": {
    "hwmon-path": "/sys/class/thermal/thermal_zone0/temp",
    "critical-threshold": 80,
    "format": "󰔏 {temperatureC}°C",
    "tooltip": false,
    "states": {
      "warning": 65,
      "critical": 80
    }
  },

  "pulseaudio": {
    "format": "󰕾 {volume}%",
    "scroll-step": 5,
    "format-muted": "󰖁 muted",
    "on-click": "pavucontrol"
  },

  "backlight": {
    "device": "intel_backlight",
    "format": "󰃠 {percent}%",
    "scroll-step": 5
  },

  "sway/language": {
    "format": " {}"
  },

  "network": {
    "format-wifi": "󰖩 {essid}",
    "format-ethernet": "󰈀 {ifname}",
    "format-disconnected": "󰖪",
    "tooltip-format": "IP: {ipaddr}\nUp: {bandwidthUpBits}\nDown: {bandwidthDownBits}",
    "on-click": "nm-connection-editor"
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": " {capacity: >3}%"
  },

  "tray": {
    "icon-size": 16,
    "spacing": 12
  }
}
